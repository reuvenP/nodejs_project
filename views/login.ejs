<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Dashboard <small>Statistics Overview</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
        </ol>
    </div>
</div>

<% if (error) { %>
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-exclamation-circle"></i>  <strong>Login Error:</strong> <%- error %>
        </div>
    </div>
</div>

<% } else { %>
<% } %>

<!-- /.row -->

<div class="row">
    <div class="col-lg-4"></div>

    <div class="col-lg-4">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <form method="POST" action="/users/login" id="loginForm" onsubmit="calcHashedLogin()">
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input class="form-control" type="text" id="username" name='username' placeholder="Enter Username" required/>
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input class="form-control" type="password" id="password" placeholder="Enter Password" required/>
                    </div>
                    <input type="hidden" id="random"  value="<%- random %>" />
                    <input type="hidden" id="hashedLogin" name="hashedLogin"/>
                    <div class="form-group">
                        <input type="submit" name="btnLogin" class="btn btn-def btn-block" value="Login" />
                        <input type="submit" name="btnForgotPassword" class="btn btn-def btn-block" value="Forgot password" />
                    </div>
                </form>
            </div>
    </div>

    <div class="col-lg-4"></div>
</div>
<!-- /.row -->
